{
  "name": "rigboss",
  "version": "0.1.0",
  "description": "Modern web-based ham radio rig control interface",
  "type": "module",
  "scripts": {
    "postinstall": "npm run setup",
    "setup": "node scripts/setup.js",
    "check-audio": "node scripts/check-audio.js",
    "test-pipeline": "node scripts/test-pipeline.js",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "astro dev",
    "dev:backend": "tsx watch backend/server.ts",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "astro build",
    "build:backend": "tsc -p backend/tsconfig.json",
    "start": "node dist/backend/server.js",
    "preview": "astro preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint . --ext .ts,.tsx,.astro",
    "lint:fix": "eslint . --ext .ts,.tsx,.astro --fix",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@astrojs/node": "^8.3.4",
    "@astrojs/react": "^3.6.2",
    "@astrojs/tailwind": "^5.1.2",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "astro": "^4.16.18",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "node-pre-gyp": "^0.17.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "tailwindcss": "^3.4.17",
    "ws": "^8.18.0",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "concurrently": "^9.1.0",
    "eslint": "^9.17.0",
    "eslint-plugin-astro": "^1.3.1",
    "prettier": "^3.4.2",
    "prettier-plugin-astro": "^0.14.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "keywords": [
    "ham-radio",
    "amateur-radio",
    "rig-control",
    "hamlib",
    "rigctld",
    "icom",
    "ic-7300",
    "web-interface",
    "astro",
    "typescript"
  ],
  "author": "rigboss contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/rigboss.git"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
