{
  "name": "rigboss",
  "private": true,
  "version": "1.0.0",
  "description": "Rigboss monorepo (packages: backend, frontend) powered by npm workspaces",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:backend dev:frontend",
    "dev:backend": "npm --workspace=@rigboss/backend run dev",
    "dev:frontend": "npm --workspace=@rigboss/frontend run dev",
    "dev:landing": "npm --workspace=@rigboss/landing run dev",
    "build": "npm-run-all build:backend build:frontend build:landing",
    "build:backend": "npm --workspace=@rigboss/backend run build",
    "build:frontend": "npm --workspace=@rigboss/frontend run build",
    "build:landing": "npm --workspace=@rigboss/landing run build",
    "start:backend": "npm --workspace=@rigboss/backend run start",
    "preview:frontend": "npm --workspace=@rigboss/frontend run preview",
    "typecheck": "npm --workspaces run typecheck",
    "lint": "npm --workspaces run lint || echo 'lint not configured in all packages'",
    "test": "npm --workspaces run test",
    "test:integration": "npm --workspaces run test:integration || echo 'no integration tests'",
    "test:e2e": "npm --workspaces run test:e2e || echo 'no e2e tests'"
  },
  "engines": {
    "node": ">=20"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Xaxis/rigboss.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Xaxis/rigboss/issues"
  },
  "homepage": "https://github.com/Xaxis/rigboss#readme",
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2"
  }
}
