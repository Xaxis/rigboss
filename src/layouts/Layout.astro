---
import '../styles/global.css';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Modern web-based ham radio rig control interface" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="theme-color" content="#1e40af" />

    <!-- PWA manifest -->
    <link rel="manifest" href="/manifest.json" />

    <!-- Icons -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />

    <!-- Preconnect to improve performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet" />

    <title>{title}</title>

    <script>
      // Theme detection and application
      (function() {
        const theme = localStorage.getItem('rigboss-theme') || 'system';
        if (theme === 'dark' || (theme === 'system' && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
          document.documentElement.classList.add('dark');
        }
      })();
    </script>

    <style>
      /* Toast container styles - ensure they're always on top */
      #toast-root {
        position: fixed !important;
        top: 1rem !important;
        right: 1rem !important;
        z-index: 999999 !important;
        pointer-events: none !important;
        max-width: 400px !important;
      }

      #toast-root > * {
        pointer-events: auto !important;
      }

      /* Ensure toasts are above everything */
      #toast-root .toast-item {
        position: relative !important;
        z-index: 999999 !important;
      }
    </style>
  </head>
  <body class="min-h-screen bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-gray-100 antialiased">
    <div id="app" class="min-h-screen flex flex-col">
      <slot />
    </div>
    
    <!-- Service Worker Registration -->
    <script>
      if ('serviceWorker' in navigator) {
        navigator.serviceWorker.register('/sw.js')
          .then(registration => console.log('SW registered:', registration))
          .catch(error => console.log('SW registration failed:', error));
      }
    </script>
  </body>
</html>


