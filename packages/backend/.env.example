# RigBoss Backend (.env)
# Copy this file to `.env` on the Raspberry Pi and adjust values.

# Server Configuration
PORT=3001
HOST=0.0.0.0

# Radio Configuration
RIGCTLD_HOST=127.0.0.1
RIGCTLD_PORT=4532

# Audio Configuration
AUDIO_ENABLED=true
AUDIO_SAMPLE_RATE=48000
AUDIO_BUFFER_SIZE=1024

# CORS Configuration
CORS_ORIGIN=http://localhost:4321,http://10.0.0.0/24
FRONTEND_URL=http://localhost:4321

# Logging
LOG_LEVEL=info
NODE_ENV=production